<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000">
        <!-- Add content here -->
        <ScrollView 
    android:layout_width="fill_parent" 
android:layout_height="fill_parent" >
<LinearLayout
	
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="#000">
	 <ImageView 
      android:id="@+id/photo" 
     android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
    /> 
	 <TextView
       android:id="@+id/titledescription"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Event Desciption "
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:textStyle="bold"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" >
    <TextView
       android:id="@+id/titleLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Event: "
       android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"/>
     <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textUser"
			android:text="@string/event_name_display"
			android:textColor="@color/darkblue"
			android:textStyle="bold"
			android:gravity="center_vertical"
			android:textAppearance="?android:attr/textAppearanceMedium"
			></TextView>
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" >

      <TextView
        android:id="@+id/eventSociety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Society: "
          android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

      <TextView
			android:layout_height="wrap_content"
			android:id="@+id/society"
			android:text="society"
			android:layout_width="fill_parent"
			android:textColor="@color/darkblue"
		    android:gravity="center_vertical"
		    android:textAppearance="?android:attr/textAppearanceMedium"
			></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" >

      <TextView
        android:id="@+id/dateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
          android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

      <TextView
			android:layout_height="wrap_content"
			android:id="@+id/textCreatedAt"
			android:text="@string/created_on"
			android:layout_width="fill_parent"
			android:textColor="@color/darkblue"
			android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" >
 <TextView
       android:id="@+id/shortLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Label: "
     android:textColor="#fff"
       android:textAppearance="?android:attr/textAppearanceMedium"/>

<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textText"
		android:text="@string/event_desc"
		android:textColor="@color/darkblue"
		android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
    </LinearLayout>
		
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" >
 <TextView
        android:id="@+id/descLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
     android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

 

      <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/descText"
		android:text="@string/description"
		android:textColor="@color/darkblue"
		android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
    </LinearLayout>

	<LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" >
<TextView

        android:id="@+id/venueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue: "
    android:textColor="#fff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

 

      <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textVenue"
		android:text="@string/venue"
		android:textColor="@color/darkblue"
		android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
    </LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp" >

  <TextView
      android:id="@+id/prizeLabel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       android:text="Prize: "
      android:textColor="#fff"
       android:textAppearance="?android:attr/textAppearanceMedium"/>

 <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/textPrize"
		android:text="@string/prize"
		android:textColor="@color/darkblue"
		android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
    </LinearLayout>
  
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="5dp" >

<TextView

       android:id="@+id/orgLabel"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Organizers: "
    android:textColor="#fff"
       android:textAppearance="?android:attr/textAppearanceMedium" />

 

   <TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/texthead"
			android:text="@string/organisers"
			android:textColor="@color/darkblue"
			android:textStyle="bold"
			android:textAppearance="?android:attr/textAppearanceMedium"></TextView>
    </LinearLayout>
  
		<LinearLayout
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="5dp" >

  <TextView

            android:id="@+id/contactLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts: "
      android:textColor="#fff"
            android:textAppearance="?android:attr/textAppearanceMedium"
             />
		<TextView
			android:layout_height="wrap_content"
			android:id="@+id/textContact"
			android:text="@string/contacts"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="fill_parent"
			android:textColor="@color/darkblue"></TextView></LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		     android:layout_height="wrap_content"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="5dp">
   
 
  </LinearLayout>
		

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/mybutton"
        android:text="@string/ButtonBack" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/ButtonModify"
        android:background="@drawable/mybutton"
        android:onClick="onEventModification" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/mybutton"
        android:text="@string/ButtonDelete" />

</RelativeLayout>
</LinearLayout></ScrollView>
</FrameLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#000"
        android:dividerHeight="1dp"
        android:background="#000"/>
</android.support.v4.widget.DrawerLayout>