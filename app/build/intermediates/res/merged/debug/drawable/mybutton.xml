<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#f27629" />
            <gradient android:angle="-90" android:startColor="#f27629" android:centerColor="#f27629"  android:endColor="#f27629"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#f27629" />
            <solid android:color="#f27629"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dip" />
            <stroke android:width="1dip" android:color="#f27629" />
            <gradient android:angle="-90" android:startColor="#f27629" android:centerColor="#f27629"  android:endColor="#FFC182" />
        </shape>
    </item>
</selector>